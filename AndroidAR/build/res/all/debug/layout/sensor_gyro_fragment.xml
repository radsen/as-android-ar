<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <ProgressBar
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/pbYaw"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="@string/sensor_gyro_txt_yaw"
        android:id="@+id/tvYaw"
        android:layout_above="@+id/pbYaw"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp" />

    <ProgressBar
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/pbPitch"
        android:layout_above="@+id/tvYaw"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="@string/sensor_gyro_txt_pitch"
        android:id="@+id/tvPitch"
        android:layout_above="@+id/pbPitch"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp" />

    <ProgressBar
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/pbRoll"
        android:layout_above="@+id/tvPitch"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="@string/sensor_gyro_txt_roll"
        android:id="@+id/tvRoll"
        android:layout_above="@+id/pbRoll"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="@string/tv_default"
        android:id="@+id/tvRollVal"
        android:layout_above="@+id/pbRoll"
        android:layout_alignParentRight="true"
        android:layout_marginRight="10dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="@string/tv_default"
        android:id="@+id/tvPitchVal"
        android:layout_alignTop="@+id/tvPitch"
        android:layout_alignRight="@+id/pbPitch" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="@string/tv_default"
        android:id="@+id/tvYawVal"
        android:layout_alignTop="@+id/tvYaw"
        android:layout_alignRight="@+id/pbYaw" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/ivFigtherJet"
        android:src="@drawable/ic_figher_jet"
        android:layout_alignRight="@+id/tvRollVal"
        android:layout_alignLeft="@+id/tvRoll"
        android:layout_above="@+id/tvRoll"
        android:layout_alignParentTop="true" />

</RelativeLayout><!-- From: file:/Users/Radsen/AndroidStudioProjects/as-android-ar/AndroidAR/src/main/res/layout/sensor_gyro_fragment.xml -->