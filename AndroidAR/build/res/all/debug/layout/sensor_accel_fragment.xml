        android:layout_above="@+id/pbZAxis"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp" />

    <ProgressBar
        style="?android:attr/progressBarStyleHorizontal"
